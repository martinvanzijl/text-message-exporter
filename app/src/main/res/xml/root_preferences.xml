<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_export_header">

        <SwitchPreference
            android:key="export_xml"
            android:title="@string/export_xml_label" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Email Options">

        <MultiSelectListPreference
            android:defaultValue="@array/email_files_to_attach"
            android:entries="@array/email_files_to_attach"
            android:entryValues="@array/email_files_to_attach"
            android:key="email_attachments"
            android:title="Choose files to attach" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Preview Options">

        <ListPreference
            android:defaultValue="@string/text_file"
            android:entries="@array/email_files_to_attach"
            android:entryValues="@array/email_files_to_attach"
            android:key="file_to_preview"
            android:title="Choose file to preview" />

    </PreferenceCategory>

</PreferenceScreen>